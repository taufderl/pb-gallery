.user-form.col-md-3
  = form_for @user do |f|
    - if @user.errors.any?
      #error_explanation
        %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
        %ul
          - @user.errors.full_messages.each do |msg|
            %li= msg
  
    .form-group
      = f.label :first_name
      = f.text_field :first_name, class: 'form-control'
    .form-group
      = f.label :name
      = f.text_field :name, class: 'form-control'
    .form-group
      = f.label :email
      = f.text_field :email, class: 'form-control'
    .form-group
      = f.label :role
      = f.collection_select :role_id, Role.all, :id, :name, {default: :watcher}, {class: 'form-control'}
    .form-group
      = link_to t('links.cancel'), users_path, class: 'btn-sm btn-primary'
      = f.submit t('links.save'), class: 'btn-sm btn-default'
      
